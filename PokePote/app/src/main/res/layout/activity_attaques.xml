<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.martin.pokepote.attaques">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="none"
        android:id="@+id/scrollView"
        android:paddingBottom="50dp"
        android:layout_marginBottom="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:id="@+id/InfoGen"
                android:weightSum="1">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:id="@+id/PokeImg"
                    android:layout_gravity="center_horizontal" />

                <LinearLayout
                    android:layout_width="140dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/PokeImg"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="20dp"
                        android:id="@+id/PokeName"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>
            </LinearLayout>
            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@android:id/list"
                android:layout_below="@+id/InfoGen" />
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/Actions"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="PrÃ©sentation"
            android:id="@+id/btnPres"
            android:singleLine="true"
            android:textColor="#ffffffff"
            android:background="#ff3b0416" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Evolutions"
            android:id="@+id/btnEvols"
            android:background="#ff3b0416"
            android:textColor="#ffffffff"
            android:singleLine="false"
            android:nestedScrollingEnabled="false"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Oeufs"
            android:id="@+id/btnOeufs"
            android:background="#ff3b0416"
            android:textColor="#ffffffff"
            android:singleLine="false" />
    </LinearLayout>
</RelativeLayout>
